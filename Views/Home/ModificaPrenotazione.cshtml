@model Software_hotel.Models.Prenotazione
@{
    ViewBag.Title = "Modifica Prenotazione";
}

<h2>Modifica Prenotazione</h2>

<div>
    <h4>Prenotazione</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>ID Prenotazione</dt>
        <dd>@Model.idPrenotazione</dd>
        <dt>Cliente</dt>
        <dd>@Model.cliente.Nome @Model.cliente.Cognome</dd>
        <dt>Camera</dt>
        <dd>@Model.camera.Descrizione</dd>
        <dt>Data Prenotazione</dt>
        <dd>@Model.DataPrenotazione.ToShortDateString()</dd>
        <dt>Inizio Soggiorno</dt>
        <dd>@Model.InizioSoggiorno.ToShortDateString()</dd>
        <dt>Fine Soggiorno</dt>
        <dd>@Model.FineSoggiorno.ToShortDateString()</dd>
        <dt>Caparra</dt>
        <dd>@Model.Caparra.ToString("C")</dd>
        <dt>Tariffa</dt>
        <dd>@Model.Tariffa.ToString("C")</dd>
        <dt>Tipo Pensione</dt>
        <dd>@Model.TipoPensione</dd>
    </dl>
</div>

<div>
    <h4>Aggiungi Servizio</h4>
    @using (Html.BeginForm("AggiungiServizio", "Home", FormMethod.Post))
    {
        @Html.HiddenFor(model => model.idPrenotazione)
        <div class="form-group">
            @Html.Label("Servizio")
            @Html.DropDownList("idServizio", new SelectList(ViewBag.ServiziDisponibili, "idServizio", "DescrizioneServizio"), "Seleziona un servizio", new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("Prezzo")
            @Html.DropDownList("prezzo", new SelectList(ViewBag.Prezzi, "Value", "Text"), "Seleziona un prezzo", new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("Quantità")
            @Html.DropDownList("quantita", new SelectList(ViewBag.Quantita, "Value", "Text"), "Seleziona una quantità", new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-primary">Aggiungi Servizio</button>
    }
</div>
